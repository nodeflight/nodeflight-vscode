{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "react-jsx",
        "rootDir": "../../src",
        "outDir": "../../out",
        "noImplicitAny": true,
        "allowJs": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "../../src/frontend/**/*",
        "../../src/common/**/*"
    ]
}
