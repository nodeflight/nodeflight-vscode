{
  "name": "nf-code",
  "displayName": "NodeFlight tools",
  "description": "Editor for NodeFlight configuration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nfCode.helloWorld",
        "title": "Hello World"
      }
    ],
    "customEditors": [
      {
        "viewType": "nfCode.nodes",
        "displayName": "NodeFlight Node Tree",
        "selector": [
          {
            "filenamePattern": "*.nfnodes"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --config build/webpack/prod.config.js",
    "watch": "webpack --config build/webpack/watch.config.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/vscode": "^1.95.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@xyflow/react": "^12.4.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.13.0",
    "mini-css-extract-plugin": "^2.9.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.6.3",
    "vscode-webview": "^1.0.1-beta.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
