{
  "name": "nf-code",
  "displayName": "NodeFlight tools",
  "description": "Editor for NodeFlight configuration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nfCode.helloWorld",
        "title": "Hello World"
      }
    ],
    "customEditors": [
      {
        "viewType": "nfCode.nodes",
        "displayName": "NodeFlight Node Tree",
        "selector": [
          {
            "filenamePattern": "*.nfnodes"
          }
        ]
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd frontend && npm install",
    "start:webview": "cd frontend && npm run start",
    "build:webview": "cd frontend && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile:webview": "cd frontend && npm run compile",
    "watch:webview": "cd frontend && npm run watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  }
}
